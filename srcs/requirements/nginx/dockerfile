# Imagen base de NGINX
FROM nginx:alpine

# Instalamos openssl para manejar TLS
RUN apk --no-cache add openssl

# Copiamos el archivo de configuraci√≥n de NGINX
COPY ./conf/nginx.conf /etc/nginx/nginx.conf

# Copiamos certificados TLS
COPY ./certs/ /etc/ssl/certs/

# Exponemos el puerto 443 para HTTPS
EXPOSE 443

# El punto de entrada es el servidor NGINX con los certificados TLS
ENTRYPOINT ["nginx", "-g", "daemon off;"]
