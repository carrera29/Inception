1.  docker ps
    # List all running containers to ensure the MariaDB container is active


2.  make exec_mariadb
    
    mariadb -u root -p$(cat /run/secrets/db_root_password.txt)
    # Connect to the MariaDB server as root using the password from the secret file

    SHOW DATABASES;
    # List all databases in the MariaDB server
    SELECT User, Host FROM mysql.user;
    # List all users in the MariaDB server
    SHOW GRANTS FOR 'sqluser'@'%';
    # List all users in the MariaDB server

    USE my_Database;
    SHOW TABLES;
    # List all tables in the my_Database database


3.  make exec_wp
    
    apt-get update
    apt-get install -y iputils-ping
    # Install ping utility in the WordPress container
    ping mariadb
    # Ping the MariaDB container to check connectivity

    apt-get update && apt-get install -y mariadb-client
    mysql -h mariadb -u sqluser -p$(cat /run/secrets/db_password.txt)
    # Connect to the MariaDB server from the WordPress container using the sqluser credentials
